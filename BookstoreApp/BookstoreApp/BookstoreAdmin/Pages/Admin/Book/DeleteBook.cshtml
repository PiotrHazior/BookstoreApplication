@page
@model BookstoreAdmin.Pages.Admin.Book.DeleteModel
@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<h3>Are you sure you want to delete this book?</h3>
<div>
    <h4>@Model.Book.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Book.Title
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Book.Author
        </dd>
        <dt class="col-sm-2">
            ISBN
        </dt>
        <dd class="col-sm-10">
            @Model.Book.ISBN
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Book.Price
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Book.Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-page="/Admin/Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

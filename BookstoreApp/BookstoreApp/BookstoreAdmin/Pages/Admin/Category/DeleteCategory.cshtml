@page
@model BookstoreAdmin.Pages.Admin.Category.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Category</h2>

<h3>Are you sure you want to delete this category?</h3>
<div>
    <h4>@Model.Category.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Category.Name
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-page="/Admin/Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>